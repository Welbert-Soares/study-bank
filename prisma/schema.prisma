// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DisciplinaNome {
  TI
  Ingles
  Portugues
  Estatistica
  Atualidades
  Bancarios
  Matematica
  Simulado
  Revisoes
  Redacao
}

enum DiaDaSemana {
  Domingo
  Segunda
  Terca
  Quarta
  Quinta
  Sexta
  Sabado
}

enum StatusConteudo {
  pendente
  em_progresso
  concluido
}

model Materia {
  id         String         @id @default(cuid())
  titulo     String
  status     StatusConteudo @default(pendente)
  ordem      Int
  disciplina DisciplinaNome

  diasDisciplina DiaDisciplinaMateria[]
}

model DiaDisciplinaMateria {
  id         String         @id @default(cuid())
  dia        DiaDaSemana
  disciplina DisciplinaNome
  materiaId  String
  materia    Materia      @relation(fields: [materiaId], references: [id])
  status     StatusConteudo @default(pendente)
}